@model ZSZ.DTO.PermissionDTO
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="formEdit">
    <input type="hidden" name="id" id="id" value="@Model.Id" />
    名称：<input type="text" name="name" id="name" value="@Model.Name" />
    描述：<input type="text" name="description" id="description" value="@Model.Description" />
    <input type="button" value="提交" id="btnSave" />
</form>
@section FooterScript
{
    <script type="text/javascript">
        $(function () {
            $("#btnSave").click(function () {
                $.ajax({
                    url: '/Permission/Edit',
                    data: $("#formEdit").serializeArray(),
                    type: 'post',
                    dataType: 'json',
                    success: function (res) {
                        if (res.status == "ok") {
                            parent.location.reload();
                        }
                    }
                });
            });
        });
    </script>
}

